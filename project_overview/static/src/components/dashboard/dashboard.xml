<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="project_overview.Dashboard" owl="1">
        <div class="o_dashboard">
            <div class="o_item">
                <table class="table">
                    <tbody>
                        <th rowspan="6">
                            <a t-on-click="onClickHoursButton">Hours</a>
                        </th>
                        <t t-foreach="billingData.hours" t-as='hours' t-key='hours'>
                            <tr>
                                <td class="o_text_right">
                                    <t t-esc="billingData.hours[hours]" />
                                </td>
                                <td>
                                    <t t-esc="formatName(hours)" />
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td class="o_text_right">
                                <t t-esc="billingData.totalHours" />
                            </td>
                            <td>
                                <b>Total</b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="o_item">
                <table class="table">
                    <tbody>
                        <th rowspan="6">
                            <a t-on-click="onClickRatesButton">Rates</a>
                        </th>
                        <t t-foreach="billingData.rates" t-as='rates' t-key='rates'>
                            <tr>
                                <td class="o_text_right">
                                    <span>
                                        <t
                                            t-esc="billingData.rates[rates]"
                                        />&#160;%</span>
                                </td>
                                <td>
                                    <t t-esc="formatName(rates)" />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="o_item">
                <table class="table">
                    <tbody>
                        <th rowspan="6">
                            <a t-on-click="onClickProfitabilityButton">Profitability</a>
                        </th>
                         <t
                            t-foreach="totalRevenueProfitability"
                            t-as='revenue'
                            t-key='revenue'
                        >
                            <tr>
                                <td class="o_text_right">
                                    <t
                                        t-esc="formatPriceAsCurrency(totalRevenueProfitability[revenue])"
                                    />
                                </td>
                                <td>
                                    <t t-esc="formatName(revenue)" />
                                </td>
                            </tr>
                        </t>
                         <t t-foreach="totalCostProfitability" t-as='cost' t-key='cost'>
                            <tr>
                                <td class="o_text_right">
                                    <t
                                        t-esc="formatPriceAsCurrency(totalCostProfitability[cost])"
                                    />
                                </td>
                                <td>
                                    <t t-esc="formatName(cost)" />
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td class="o_text_right">
                                <t t-esc="formatPriceAsCurrency(totalProfitability)" />
                            </td>
                            <td>
                                <b>Total</b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>
