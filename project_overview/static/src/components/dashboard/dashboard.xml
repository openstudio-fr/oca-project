<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="project_overview.Dashboard" owl="1">
        <div class="o_dashboard">
            <div class="o_item">
                <table class="table">
                    <tbody>
                        <th rowspan="6">
                            <a t-on-click="onClickHoursButton">Hours</a>
                        </th>
                        <t t-foreach="allData.hours" t-as='hours' t-key='hours'>
                            <tr>
                                <td class="o_text_right">
                                    <t t-esc="allData.hours[hours]" />
                                </td>
                                <td>
                                    <t t-esc="formatName(hours)" />
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td class="o_text_right">
                                <t t-esc="allData.totalHours" />
                            </td>
                            <td>
                                <b>Total</b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="o_item">
                <table class="table">
                    <tbody>
                        <th rowspan="6">
                            <a t-on-click="onClickRatesButton">Rates</a>
                        </th>
                        <t t-foreach="allData.rates" t-as='rates' t-key='rates'>
                            <tr>
                                <td class="o_text_right">
                                    <span>
                                        <t t-esc="allData.rates[rates]" />&#160;%</span>
                                </td>
                                <td>
                                    <t t-esc="formatName(rates)" />
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
            <div class="o_item">
                <table class="table">
                    <tbody>
                        <th rowspan="6">
                            <a t-on-click="onClickProfitabilityButton">Profitability</a>
                        </th>
                         <t t-foreach="revenues.total" t-as='revenue' t-key='revenue'>
                            <tr>
                                <td class="o_text_right">
                                    <t
                                        t-esc="formatPriceAsCurrency(revenues.total[revenue])"
                                    />
                                </td>
                                <td>
                                    <t t-esc="formatName(revenue)" />
                                </td>
                            </tr>
                        </t>
                         <t t-foreach="costs.total" t-as='cost' t-key='cost'>
                            <tr>
                                <td class="o_text_right">
                                    <t
                                        t-esc="formatPriceAsCurrency(costs.total[cost])"
                                    />
                                </td>
                                <td>
                                    <t t-esc="formatName(cost)" />
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td class="o_text_right">
                                <t t-esc="formatPriceAsCurrency(profitabilityTotal)" />
                            </td>
                            <td>
                                <b>Total</b>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </t>
</templates>
