<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="project_overview.GlobalActions" owl="1">
        <div class="o_project_overview_stat">
            <button class="o_project_overview_button" t-on-click="openProject">
                <i
                    class="fa fa-fw fa-puzzle-piece"
                    aria-label="Project"
                    title="Project"
                />
                <span>Project</span>
            </button>
            <button class="o_project_overview_button" t-on-click="openTimesheets">
                <i
                    class="fa fa-fw fa-calendar"
                    aria-label="Timesheets"
                    title="Timesheets"
                />
                <span>Timesheets</span>
            </button>
            <button class="o_project_overview_button" t-on-click="openTaskList">
                <i class="fa fa-fw fa-tasks" aria-label="Tasks" title="Tasks" />
                <span>
                    <t t-esc="taskCount" />&#160;Tasks
                </span>
            </button>
            <button
                t-if="saleOrderCount !== 0"
                t-on-click="openSaleOrder"
                class="o_project_overview_button"
            >
                <i
                    class="fa fa-fw fa-dollar"
                    aria-label="Sales Orders"
                    title="Sales Orders"
                />
                <span>
                    <t t-esc="saleOrderCount" />&#160;Sales Orders
                </span>
            </button>
            <button
                class="o_project_overview_button"
                t-on-click="openInvoices"
                t-if="invoiceCount !== 0"
            >
                <i
                    class="fa fa-fw fa-pencil-square-o"
                    aria-label="Invoices"
                    title="Invoices"
                />
                <span>
                    <t t-esc="invoiceCount" />&#160;Invoices
                </span>
            </button>
        </div>
    </t>
</templates>
