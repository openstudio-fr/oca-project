<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="project_overview.Dashboard" owl="1">
        <div class="table-responsive">
            <table class="table">
                <tbody>
                    <tr>
                        <th rowspan="6">
                            <a t-on-click="onClickHoursButton">Hours</a>
                        </th>
                        <td style='text-align:right'>
                            <t t-esc="allData.hours.billable_time" />
                        </td>
                        <td>Timesheets</td>
                        <th rowspan="6">
                            <a t-on-click="onClickRatesButton">Rates</a>
                        </th>
                        <td style='text-align:right'>
                            <t t-esc="allData.rates.billable_time" />&#160;%
                        </td>
                        <td>Timesheets</td>
                        <th rowspan="6">
                            <a t-on-click="onClickProfitabilityButton">Profitability</a>
                        </th>
                        <td style='text-align:right'>
                            <span>
                                <t
                                    t-esc="formatPriceAsCurrency(revenues.total.invoiced)"
                                />
                            </span>
                        </td>
                        <td>Invoiced</td>
                    </tr>
                    <tr>
                        <td style='text-align:right'>
                            <t t-esc="allData.hours.billable_fixed" />
                        </td>
                        <td>Fixed</td>
                        <td style='text-align:right'>
                            <t t-esc="allData.rates.billable_fixed" />&#160;%
                        </td>
                        <td>Fixed</td>
                        <td style='text-align:right'>
                            <span>
                                <t
                                    t-esc="formatPriceAsCurrency(revenues.total.to_invoice)"
                                />
                            </span>
                        </td>
                        <td>To invoice</td>
                    </tr>
                    <tr>
                        <td style='text-align:right'>
                            <t t-esc="allData.hours.non_billable" />
                        </td>
                        <td>Non billable</td>
                        <td style='text-align:right'>
                            <t t-esc="allData.rates.non_billable" />&#160;%
                        </td>
                        <td>Non billable</td>
                        <td style='text-align:right'>
                            <t t-esc="formatPriceAsCurrency(costs.total.billed)" />
                        </td>
                        <td>
                            Re-invoiced costs
                        </td>
                    </tr>
                    <tr>
                        <td style='text-align:right'>
                            <t t-esc="allData.hours.billable_manual" />
                        </td>
                        <td>Billable manual</td>
                        <td style='text-align:right'>
                            <t t-esc="allData.rates.billable_manual" />&#160;%
                        </td>
                        <td>Billable manual</td>
                        <td style='text-align:right'>
                            <t t-esc="formatPriceAsCurrency(costs.total.to_bill)" />
                        </td>
                        <td>
                            Costs
                        </td>
                    </tr>
                    <tr>
                        <td style='text-align:right'>
                            <t t-esc="allData.totalHours" />
                        </td>
                        <td>
                            <b>Total</b>
                        </td>
                        <td />
                        <td />
                       <td style='text-align:right'>
                            <t t-esc="formatPriceAsCurrency(profitabilityTotal)" />
                        </td>
                        <td>
                            <b>Total</b>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </t>
</templates>
