<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="project_project_overview_view_form" model="ir.ui.view">
        <field name="name">project.project.form.custom</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form
                js_class='project_overview_custom_form_view'
                create="false"
                edit="false"
                delete="false"
                duplicate="false"
            >
                <sheet>
                    <field
                        name="widget_field"
                        widget="project_overview_widget"
                        nolabel="1"
                        style="width:100%"
                    />
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_project_overview" model="ir.actions.act_window">
        <field name="name">Project Overview</field>
        <field name="res_model">project.project</field>
        <field name="view_mode">form</field>
        <field name="domain">[('project_id', '=', active_id)]</field>
        <field name="context">{
                "default_project_id": active_id,
        }</field>
        <field
            name="view_id"
            ref="project_overview.project_project_overview_view_form"
        />
    </record>

    <menuitem
        id="menu_project_overview"
        name="Project Overview"
        parent="project.menu_main_pm"
        action="action_project_overview"
        sequence="10"
    />
</odoo>
